                              <a href=<%="/user/#{@user.id}/follow"%> class="btn btn-inverse">Follow<i class="fa fa-circle-o-notch fa-fw"></i></a>
                            <% else %>
                              <a href=<%="/user/#{@user.id}/unfollow"%> class="btn btn-success">Following <i class="fa fa-check-circle fa-fw"></i></a>
                            <% end %>
                        <% else %>
                          <a href=<%="/user/#{@user.id}/follow"%> class="btn btn-inverse">Follow<i class="fa fa-circle-o-notch fa-fw"></i></a>
                        <% end %>
                      <% end %>
