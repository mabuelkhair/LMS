<h1>New Create Course</h1>

    <div class="col-sm-4">
<%= form_tag "/courses", :name => "new_course" do %>

      <input type="text" class="form-control" name="course[name]" placeholder="Name">
      <input type="text" class="form-control" name="course[description]" placeholder="description">
      <input type="text" class="form-control" name="course[privacy]" placeholder="privacy">
      <input type="text" class="form-control" name="course[tags]" placeholder="fields of interests">
      <input type="text" class="form-control" name="course[objectives]" placeholder="learning objective">
    <input class="btn btn-primary btn-lg" type="submit" value="create">
<% end %>

	<a href="/course">
		<button class="btn btn-primary btn-lg" >Back</button>
	</a>

	<% if @course.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@course.errors.count, "error") %> prohibited this article from being saved:</h2>
 
    <ul>
    <% @course.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

</div>
