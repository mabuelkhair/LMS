
 <body class="breakpoint-1024">
        <div class="container-fluid" style="width: 700px;">
            <div class="page-header">
                <h1 style="text-align: center;">Requesters</h1>
                
                <div class="clearfix"></div>
            </div>
<%if @requesters.count == 0 then %>
            <div class="panel panel-default">
        <div class="panel-body">
            <div class="media media-clearfix-xs-min">
                <div class="media-body">
                    <h3 class="media-heading h4">There are no requests to join course</h3>
                    
                </div>
            </div>
        </div>
    </div>
<%else%>
<table class="table table-sm">
  <thead>
    <tr>
      <th>#</th>
      <th>Requester</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <tr>

    


    <%count=0%>
    <%@requesters.each do |key,value|%>
        <%count= count +1 %>
        
      <td scope="row"><%=count%></td>
        <td> <%=value%></td>
        <td>
        <a href="/courses/<%=@course.id%>/requesters/accept/<%=key%>">
        <button class="btn btn-primary btn-lg" type="submit" >Accept</button>
        </a>
        <a href="/courses/<%=@course.id%>/requesters/reject/<%=key%>">
        <button class="btn btn-primary btn-lg" type="submit" >Reject</button>
        </a>
        </td>
    <%end%> 
    </tr>
    </tbody>
    </table>
<%end%>
        </div>
    </body>
