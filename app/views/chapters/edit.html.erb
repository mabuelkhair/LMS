<body class="login">

<div id="content">
   <div class="container-fluid">
      <div class="lock-container">
         <h1 style="color: black">Update Chapter</h1>
         <div class="panel panel-default text-center">
            <br>
            <div class="panel-body">
               <%= form_tag "/chapters/"+params[:id], :name => "update", :method => "put" do %>
                  <label >Name</label>
                  <input type="text" class="form-control" name="chapter[name]" value=<%=@chapter.name%>>
                  <label >Description</label>
                  <textarea class="form-control" name="chapter[description]" placeholder="description"><%=@chapter.description%></textarea><br>
                  <input class="btn btn-primary btn-lg" type="submit" value="Update">
            <% end %>
            </div>
         </div>
      </div>
   </div>
</div>
</body>




