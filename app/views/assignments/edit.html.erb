<body class="login">

<div id="content">
   <div class="container-fluid">
      <div class="lock-container">
         <h1 style="color: black">Editing Assignment</h1>
         <div class="panel panel-default text-center">
            <br>
            <div class="panel-body">
             <%= form_tag "/courses/"+@course.id.to_s+"/assignments/"+@assignment.id.to_s, :name => "update", :method => "put" do %>
            <label for="assignment_Name">Name</label>
            <input class="form-control" type="text" name="assignment[name]" id="assignment_name" value="<%=@assignment.name%>">
            <label for="assignment_Description">Description</label>
            <input class="form-control" type="text" name="assignment[description]" id="assignment_description" value="<%=@assignment.description%>">

            <label for="assignment_Date">Due Date (today or after)</label>
            
            <input min="<%=Time.now.strftime("%Y-%m-%d")%>"class="form-control" type="date" name="assignment[due_date]" id="assignment_due_date" value="<%=@assignment.due_date%>">

            <input type="submit" name="commit" value="Save" class="btn btn-primary">
            <% end %>
            </div>
         </div>
      </div>
   </div>
</div>
</body>