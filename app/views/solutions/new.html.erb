<h1>Solutions#new</h1>
<p>Find me in app/views/solutions/new.html.erb</p>

<% if !in_course()%>
	<% controller.redirect_to courses_path %>
<% end %>

<body class="login">

<div id="content">
   <div class="container-fluid">
      <div class="lock-container">
         <h1 style="color: black">New Assignment</h1>
         <div class="panel panel-default text-center">
            <br>
            <div class="panel-body">

            <%= form_for [@course, @assignment,@solution], html: { multipart: true } do |f| %>

            <label for="assignment_attachment">Attachment</label>
            <input class="form-control" type="file" name="solution[attachment]" id="solution_attachment">
            <input type="submit" name="commit" value="submit" class="btn btn-primary">
            <% end %>
            </div>
         </div>
      </div>
   </div>
</div>
</body>
<% if @assignment.errors.any? %>
<ul style="text-align: center; color: red;font-size: 15px">
  <% @assignment.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
