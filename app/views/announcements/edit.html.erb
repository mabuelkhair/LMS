<% if current_user.id!=@course.owner.id%>
	<% controller.redirect_to courses_path %>
<% end %>

<body class="login">

<div id="content">
   <div class="container-fluid">
      <div class="lock-container">
         <h1 style="color: black">Editing Announcement</h1>
         <div class="panel panel-default text-center">
            <br>
            <div class="panel-body">
             <%= form_tag "/courses/"+@course.id.to_s+"/announcements/"+@announcement.id.to_s, :name => "update", :method => "put" do %>
                  <label >Title</label>
                  <input type="text" class="form-control" name="announcement[title]" placeholder="Name" value=<%=@announcement.title%> >
                  <label >Body</label>
                  <textarea type="text" class="form-control" name="announcement[body]" placeholder="Annoucement Content"><%=@announcement.body%></textarea>
                  <input class="btn btn-primary btn-lg" type="submit" value="create">
            <% end %>
            </div>
         </div>
      </div>
   </div>
</div>
</body>