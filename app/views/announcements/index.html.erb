<p id="notice"><%= notice %></p>

<h1>Listing Announcements</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.title %></td>
        <td><%= announcement.body %></td>
        <td><%= link_to 'Show', course_announcement_path(@course, announcement) %></td>
        <td><%= link_to 'Edit', edit_course_announcement_path(@course, announcement)%></td>
        <td><%= link_to 'Destroy', [@course, announcement], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Announcement',new_course_announcement_path(@course)%>
